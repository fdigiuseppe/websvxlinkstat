# Configurazioni environment per SVXLink Log Analyzer Docker

# Flask Configuration
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=0

# Security
SECRET_KEY=your-secret-key-here

# Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Docker specific
CONTAINER_NAME=svxlink-log-analyzer
IMAGE_TAG=latest

# Network
EXTERNAL_PORT=5000
INTERNAL_PORT=5000

# Volumes
LOGS_PATH=./logs
CONFIG_PATH=./config

# Development only
DEV_MODE=false
DEBUG_PORT=5678